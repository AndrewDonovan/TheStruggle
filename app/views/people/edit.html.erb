<h1>Update Your Info Here</h1>

<%= form_for @person do |f| %>
	Name: <%= f.text_field :name %><br />
	E-Mail: <%= f.text_field :email %><br />
	Age: <%= f.text_field :age %><br />
	Drink Of Choice: <%= f.text_field :drink %><br />
	<br />
	<%= f.submit %>
<% end %>

<br>
<br>

<%= link_to 'Delete Your Profile?', @person, method: :delete, data: { confirm: "Are you sure!?"} %>
